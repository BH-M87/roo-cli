# Example .env file for library-usage.ts
# Copy this file to .env and fill in your API keys

# API Provider (anthropic or openai)
API_PROVIDER=openai

# Anthropic API Key (required if using Anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_ID=gpt-4

# Task Configuration
MODE=auto
LOG_LEVEL=info
# CONTINUOUS=true
# MAX_STEPS=100
# AUTO=true
# RULES="11. Always use ES6 syntax. 12. Use async/await instead of promises."
# CUSTOM_INSTRUCTIONS="You are a TypeScript expert."
# ROLE_DEFINITION="You are a senior developer with 10 years of experience."
# ONLY_RETURN_LAST_RESULT=true

# Default prompt (can be overridden by command line argument)
# PROMPT="Write a function to calculate the Fibonacci sequence"
